# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{cs,csx}]
indent_size = 4

[*.{json,jsonc}]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.yml,*.yaml]
indent_size = 2

[Dockerfile*]
indent_size = 2

[*.sql]
indent_size = 2